# Development Dockerfile for OmniScholar Angular App
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy all files
COPY . .

# Expose port 4200
EXPOSE 4200

# Start development server with host binding for Docker
CMD ["npm", "start", "--", "--host", "0.0.0.0"]
