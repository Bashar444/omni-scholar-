{
  "version": 2,
  "buildCommand": "chmod +x scripts/build.sh && ./scripts/build.sh || (chmod +x scripts/fallback-build.sh && ./scripts/fallback-build.sh)",
  "outputDirectory": "dist/omni-scholar-app",
  "installCommand": "npm install --legacy-peer-deps --force --no-audit --no-fund",
  "rewrites": [
    { "source": "/:path*", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/assets/:path*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/:path*",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
